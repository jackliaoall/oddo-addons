<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit HR Expense Tree View -->
    <record id="view_my_expenses_tree_inherit" model="ir.ui.view">
        <field name="name">hr.expense.tree.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.view_my_expenses_tree"/>
        <field name="arch" type="xml">
            <field name="employee_id" position="after">
                <field name="ai_cline" optional="show"/>
            </field>
        </field>
    </record>

    <!-- Inherit HR Expense Form View -->
    <record id="hr_expense_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.expense.form.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <!-- Add ai_cline field after employee_id in form view -->
            <field name="employee_id" position="after">
                <field name="ai_cline"/>
            </field>

            <!-- Add AI button after action_view_sheet button -->
            <button name="action_view_sheet" position="after">
                <button name="action_open_ai_wizard"
                        string="ai æŒ‰éˆ•"
                        type="object"
                        class="oe_highlight"
                        invisible="state != 'draft'"/>
            </button>
        </field>
    </record>
</odoo>
